<Window x:Class="NoDb.Apps.UI.SubWindows.NewTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoDb.Apps.UI.SubWindows"
        mc:Ignorable="d"
        Title="New Table" Height="254" Width="402" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Table Name" />
            <TextBox x:Name="xTableName" Margin="0,0,0,10"/>
            <Label Content="Template" />
            <ComboBox Name="xTemplate"/>
            <Grid Margin="20">
                <Button Content="ADD" HorizontalAlignment="Left" Click="AddButton_Click" Style="{StaticResource ButtonSuccess}"/>
                <Button Content="CANCEL" HorizontalAlignment="Right" Click="CancelButton_Click"/>
            </Grid>
            
        </StackPanel>
    </Grid>
</Window>
